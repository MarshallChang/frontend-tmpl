    "@headlessui/react": "^1.5.0",
    "@react-spring/three": "^9.4.3",
    "@react-three/drei": "^8.9.0",
    "@react-three/fiber": "^7.0.26",
    "ahooks": "^3.1.9",
    "eslint": "^8.10.0",
    "eslint-plugin-react": "^7.29.3",
    "ethers": "^5.5.4",
    "react": "17.x",
    "react-dom": "17.x",
    "react-hot-toast": "^2.2.0",
    "three": "^0.137.5",
    "umi": "^3.5.20",
    "umi-request": "^1.4.0"
